<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.garrett.puzzleattackgame.GameActivity"
    android:background="@drawable/gameback"
    android:animateLayoutChanges="true">


    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/chronometer2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/level"
        android:layout_toEndOf="@+id/level" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/score"
        android:layout_toStartOf="@+id/score"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp" />

    <RelativeLayout
        android:layout_width="572dp"
        android:id="@+id/playGrid"
        android:background="#999999BF"
        android:animateLayoutChanges="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="1000dp">

    </RelativeLayout>

    <Button
        android:text="Row"
        android:id="@+id/rownew"
        android:elevation="0dp"
        android:layout_height="50dp"
        android:layout_width="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

</RelativeLayout>
