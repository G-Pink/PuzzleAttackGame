<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.garrett.puzzleattackgame.GameActivity"
    android:background="@drawable/gameback"
    android:animateLayoutChanges="true">


    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/chronometer2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:paddingTop="5dp"
        android:backgroundTint="#999999BF"
        android:backgroundTintMode="multiply" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/level"
        android:layout_toEndOf="@+id/level"
        android:backgroundTint="#999999BF" />

    <Button
        android:text="^"
        android:id="@+id/rownew"
        android:elevation="0dp"
        android:layout_alignBottom="@+id/playGrid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/playGrid"
        android:layout_toRightOf="@+id/playGrid"
        android:layout_height="50dp"
        android:layout_width="30dp"
        android:background="#a2a2cc" />

    <RelativeLayout
        android:layout_height="500dp"
        android:id="@+id/playGrid"
        android:background="#999999BF"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:animateLayoutChanges="false"
        android:layout_width="286dp">

        <TextView
            android:text="_____________________________________________"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:text="Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/playGrid"
        android:layout_alignEnd="@+id/playGrid"
        android:backgroundTint="#999999BF" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:inputType="number"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:backgroundTint="#999999BF" />

</RelativeLayout>
